                <form class="grid" id="subscribe-form">
                    <input type="text" id="firstname" name="firstname" placeholder="Ваше имя" aria-label="Ваше имя" required>
                    <input type="email" id="email" name="email" placeholder="Ваш email" aria-label="Ваш email" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$">
                    <button type="submit">Подписаться</button>
